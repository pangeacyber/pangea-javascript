{
  "name": "pangea-node-sdk",
  "version": "1.0.0",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "typings": "./dist/src/index.d.ts",
  "repository": "git@github.com:pangeacyber/pangea-javascript.git",
  "author": "Glenn Gallien <glenn.gallien@pangea.cloud>",
  "license": "MIT",
  "dependencies": {
    "crypto-js": "^4.1.1",
    "got": "11.8.5",
    "merkle-tools": "^1.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/eslint-parser": "^7.18.9",
    "@gitlab/eslint-config": "^4.0.0",
    "@types/crypto-js": "^4.1.1",
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.3",
    "prettier": "^2.6.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^9.1.1",
    "typedoc": "^0.23.14",
    "typedoc-plugin-missing-exports": "^1.0.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules npx jest --testPathPattern=tests/unit",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules npx jest --testPathPattern=tests/integration",
    "lint": "npx prettier --check . && npx eslint --ext .ts",
    "prettier:fix": "npx prettier . -w",
    "generate:docs": "typedoc src/index.ts --json ./docs.json --tsconfig ./tsconfig.json --exclude 'node_modules/**'",
    "build": "rm -fr dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup.sh"
  },
  "files": [
    "dist"
  ]
}
