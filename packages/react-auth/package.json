{
  "name": "@pangeacyber/react-auth",
  "description": "Pangea auth provider React component",
  "version": "0.0.16",
  "type": "commonjs",
  "source": "src/index.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "repository": "github:pangeacyber/pangea-javascript",
  "author": "Pangea (https://pangea.cloud)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@4.7.0",
  "scripts": {
    "build": "yarn build-docs && parcel build && cp dist/index.d.ts dist/index.d.mts",
    "build-docs": "typedoc --plugin typedoc-plugin-rename-defaults",
    "lint-attw": "attw --pack",
    "lint-publint": "publint --strict",
    "prepack": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@pangeacyber/vanilla-js": "^0.1.12",
    "jose": "^6.0.10",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "react": "^17.0.2 || ^18.2.0 || ^19.0.0",
    "react-dom": "^17.0.2 || ^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@babel/core": "^7.26.10",
    "@futureportal/parcel-transformer-package-version": "^1.0.0",
    "@parcel/config-default": "^2.13.3",
    "@parcel/packager-ts": "^2.13.3",
    "@parcel/plugin": "^2.13.3",
    "@parcel/source-map": "^2.1.1",
    "@parcel/transformer-typescript-types": "^2.13.3",
    "@parcel/utils": "^2.13.3",
    "@tsconfig/strictest": "^2.0.5",
    "@types/lodash": "^4.17.16",
    "@types/react": "19.0.10",
    "parcel": "^2.13.3",
    "publint": "0.3.8",
    "react": "19.0.0",
    "typedoc": "^0.27.9",
    "typedoc-plugin-rename-defaults": "^0.7.2",
    "typescript": "^5.8.2"
  }
}
